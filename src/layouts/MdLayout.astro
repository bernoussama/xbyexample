---
const {frontmatter} = Astro.props;
import Layout from '@layouts/Layout.astro';
import '@/styles/global.css';
const url = Astro.url

import {capitalize} from '@/utils'
---


<Layout title={capitalize(`${url.pathname.split("/")[1]} | ${frontmatter.title}`)} description={frontmatter.description}>
  <article id="article">
    <div class="grid">
        <slot />
    </div>
  </article>

</Layout>
